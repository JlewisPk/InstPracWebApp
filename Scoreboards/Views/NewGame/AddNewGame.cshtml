@model Scoreboards.Models.NewGame.AddNewGameModel

@{
    ViewData["Title"] = "AddNewGame";
}

<h2>AddNewGame</h2>

<form asp-action="UploadNewGame" method="post" id="addNewGame" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="GameName">Game Name</label>
        <input asp-for="GameName" class="form-control" type="text" placeholder="Enter the game name" required />
        <span asp-validation-for="GameName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GameLogo">Game Logo</label>
        <div class="col-md-10">
            <input type="file" name="file" required />
        </div>
    </div>

    <button type="submit" id="submitNewGameGameBtn" class="btn btn-submitNewGame">
        Submit
    </button>
</form>
